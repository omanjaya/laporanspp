# Railway Laravel Production Environment
# Copy this to Railway environment variables

APP_NAME="Laporan SPP"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

# Database - Railway PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Session & Cache
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file
QUEUE_CONNECTION=sync

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# CORS - Allow Next.js frontend
CORS_ALLOWED_ORIGINS=https://your-nextjs-app.vercel.app

# API Key for frontend authentication
API_KEY=spp-rekon-2024-secret-key
